<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommonClasses.Login"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:id="@+id/header"
                android:layout_marginTop="10dp"

                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-45dp"
                    android:background="@drawable/circle_right"
                    android:layout_alignParentRight="true"

                    />

                <TextView
                    android:id="@+id/dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="Login"
                    android:textSize="40dp"
                    app:fontFamily="@font/poppins_semibold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="-90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg1"
                android:paddingBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/curved_box"
                    android:orientation="vertical"
                    android:padding="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <EditText
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/username_icon"
                            android:layout_marginLeft="10dp"/>

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:id="@+id/editTextEmailLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#DDDDDD"
                            android:hint= "Username"
                            android:textColor="#707070"
                            android:textSize="25dp"
                            android:inputType="textEmailAddress"></EditText>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">

                        <EditText
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/key"
                            android:layout_marginLeft="10dp"/>

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:id="@+id/editTextPasswordLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#DDDDDD"
                            android:hint= "Password"
                            android:textColor="#707070"
                            android:textSize="25dp"
                            ></EditText>


                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-70dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forgot Your Password?"
                    android:textSize="20dp"
                    android:textColor="#4E3883"
                    android:textAlignment="textEnd"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="5dp">
                <Button
                    android:id="@+id/buttonLoginLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Login"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="32dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:background="@drawable/background_shade_2"
                    android:textColor="@color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/textViewSignupLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account? Register Now"
                    android:textSize="20dp"
                    android:textColor="#4E3883"
                    android:textAlignment="center"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/footer"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-45dp"
                    android:background="@drawable/circle_left"
                    android:layout_alignParentRight="false"

                    />



            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>