<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/curved_box"
        android:layout_marginTop="25dp"

        android:padding="12dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textViewFlatVerifyResident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="110"
                android:textSize="22sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/textViewBlockVerifyResident"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:hint="A"
                android:textSize="22sp" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textViewNameVerifyResident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vritika Malhotra"
            android:textAlignment="center"
            android:textSize="25sp"
            android:fontFamily="@font/poppins_semibold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textViewMobileVerifyResident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="9106435229"
            android:textAlignment="center"
            android:textSize="25sp"
            android:fontFamily="@font/poppins_semibold"/>
        <Button
            android:id="@+id/buttonAcceptVerifyResident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept" />
        <Button
            android:id="@+id/buttonRejectVerifyResident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reject" />

    </LinearLayout>



</LinearLayout>