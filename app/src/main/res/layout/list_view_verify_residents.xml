<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/curved_box"
        android:layout_marginTop="25dp"

        android:padding="12dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:id="@+id/textViewNameVerifyResident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Vritika Malhotra"
                android:textSize="22sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/textViewBlockVerifyResident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="A"
                android:textSize="22sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/textViewNameVerifyResident"/>

            <TextView
                android:id="@+id/textViewFlatVerifyResident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="110"
                android:textSize="22sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/textViewNameVerifyResident"/>

            <Button
                android:id="@+id/buttonRejectVerifyResident"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/reject"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                />
            <Button
                android:id="@+id/buttonAcceptVerifyResident"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/accept"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/buttonRejectVerifyResident"
                />
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/textViewMobileVerifyResident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="9638570784"
                android:textSize="22sp"
                android:layout_below="@+id/textViewFlatVerifyResident"
                android:layout_marginTop="8dp"/>



        </RelativeLayout>
    </LinearLayout>
</LinearLayout>